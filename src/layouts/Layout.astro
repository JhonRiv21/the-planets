---
import { ClientRouter } from "astro:transitions";
import "../styles/dots.css";
import Header from "../components/Header.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/src/assets/saturn/planet-saturn.svg" />
    <link rel="stylesheet" href="./src/styles/global.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Antonio:wght@500&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Spartan:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>The Planets</title>
    <ClientRouter />
  </head>
  <body class="bg-black text-white font-antonio">
    <div class="doc-stars doc-stars--sm"></div>
    <div class="doc-stars doc-stars--md"></div>
    <div class="doc-stars doc-stars--lg"></div>
    <Header />
    <main class="px-5 lg:px-10 py-6 max-w-screen-2xl mx-auto">
      <slot />
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
